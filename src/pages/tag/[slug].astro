---
import '../../styles/global.css';
import { Header } from '../../components/layout/Header';
import { Footer } from '../../components/layout/Footer';
import { PostList } from '../../components/blog/PostList';
import { wpApi } from '../../lib/wordpress';

export async function getStaticPaths() {
  try {
    const tags = await wpApi.getTags({ per_page: 100 });
    const paths = [];

    for (const tag of tags) {
      const posts = await wpApi.getPosts({
        tags: [tag.id],
        per_page: 20,
        _embed: true
      });
      paths.push({
        params: { slug: tag.slug },
        props: { tag, posts }
      });
    }

    return paths;
  } catch (error) {
    console.error('Error fetching tags for static paths:', error);
    return [];
  }
}

const { tag, posts } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Etiqueta: {tag.name} - Tu San Agust√≠n</title>
    <meta name="description" content={`Posts con la etiqueta ${tag.name}. ${tag.description}`} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body>


    <main class="min-h-screen bg-gray-50">
      <div class="bg-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center">
            <div class="flex items-center justify-center gap-2 mb-4">
              <span class="text-green-600 font-medium">Etiqueta</span>
              <span class="text-gray-400">/</span>
            </div>
            <h1 class="text-4xl font-bold text-gray-900 mb-4">#{tag.name}</h1>
            {tag.description && (
              <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                {tag.description}
              </p>
            )}
            <div class="mt-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-green-100 text-green-800">
                {tag.count} {tag.count === 1 ? 'post' : 'posts'}
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        {posts && posts.length > 0 ? (
          <PostList client:load initialPosts={posts} showFilters={false} />
        ) : (
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">No hay posts con esta etiqueta.</p>
            <a
              href="/blog"
              class="inline-flex items-center mt-4 text-blue-600 hover:text-blue-800"
            >
              Ver todos los posts
            </a>
          </div>
        )}
      </div>
    </main>

    <Footer client:load />
  </body>
</html>
