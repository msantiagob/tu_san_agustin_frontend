---
import '../../styles/global.css';
import { Header } from '../../components/layout/Header';
import { Footer } from '../../components/layout/Footer';
import { PageList } from '../../components/pages/PageList';
import { wpApi } from '../../lib/wordpress';
import logoImage from '../../assets/images/Tu-San-Agustin_Logo.png';

// Fetch pages for pages listing
let pages = [];
try {
  pages = await wpApi.getPages({ per_page: 20, _embed: true });
} catch (error) {
  console.error('Error fetching pages:', error);
}
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Páginas - Tu San Agustín</title>
    <meta name="description" content="Explora todas nuestras páginas con información sobre servicios, eventos y turismo en San Agustín." />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body>
    <Header client:load logoUrl={logoImage.src} />
    
    <main class="min-h-screen bg-gray-50">
      <div class="bg-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Nuestras Páginas</h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
              Explora toda la información sobre nuestros servicios, eventos y experiencias turísticas
            </p>
          </div>
        </div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <PageList client:load initialPages={pages} />
      </div>
    </main>
    
    <Footer client:load />
  </body>
</html>