---
import Layout from '../layouts/Layout.astro';
// Layout components
import Navbar from '../components/layout/Navbar.astro';
import { Image } from 'astro:assets';

import Banner from '../components/wedding-destination/Banner.astro';
import Button from '../components/shared/Button.astro';
import JoinUsFooter from '../components/shared/JoinUsFooter.astro';
import Locaciones from '../components/bodas_destino/Locaciones.astro';

import Carrousel from '../components/lugares/Slider.astro';

import icono1 from '../assets/images/lugares/icono-1.webp';
import icono2 from '../assets/images/lugares/icono-2.webp';
import icono3 from '../assets/images/lugares/icono-3.webp';
import icono4 from '../assets/images/lugares/icono-4.webp';
import bannerLugares from '../assets/images/lugares/tu_san_agustin_lugares_para_eventos_banner_001.webp';
import footerBg from '../assets/images/lugares/footer-bg.webp';

// Imágenes de lugares
import imgEventosCampestres from '../assets/images/lugares_list/tu_san_agustin_lugares_para_eventos_eventoscampestres_016.webp';
import imgHaciendaElSalitre from '../assets/images/lugares_list/tu_san_agustin_lugares_para_eventos_haciendaelsalitre_013.webp';
import imgHaciendaKala from '../assets/images/lugares_list/tu_san_agustin_lugares_para_eventos_haciendakala_011.webp';
import imgHaciendaPozoChico from '../assets/images/lugares_list/tu_san_agustin_lugares_para_eventos_haciendapozochico_010.webp';
import imgHaciendaSanRafael from '../assets/images/lugares_list/tu_san_agustin_lugares_para_eventos_haciendasanrafael_008.webp';
import imgHaciendasYFincas from '../assets/images/lugares_list/tu_san_agustin_lugares_para_eventos_haciendasyfincasparabodas_018.webp';
import imgHotelLaVictoria from '../assets/images/lugares_list/tu_san_agustin_lugares_para_eventos_hotelyeventoshaciendalavictoria_009.webp';

const lang = 'es';

const seo = {
  title: 'Lugares para Bodas y Eventos en Medellín',
  description:
    'Encuentra los mejores lugares para bodas y eventos en Medellín y Antioquia. Haciendas, fincas, salones, hoteles y centros de convenciones. Más de 90 locaciones exclusivas.',
  keywords:
    'lugares bodas Medellín, fincas para bodas, haciendas eventos Antioquia, salones matrimonios, locaciones bodas Colombia',
};

const lugares = [
  { nombre: 'Eventos Campestres', imagen: imgEventosCampestres },
  { nombre: 'Hacienda El Salitre', imagen: imgHaciendaElSalitre },
  { nombre: 'Hacienda Kala', imagen: imgHaciendaKala },
  { nombre: 'Hacienda Pozo Chico', imagen: imgHaciendaPozoChico },
  { nombre: 'Hacienda San Rafael', imagen: imgHaciendaSanRafael },
  { nombre: 'Haciendas y Fincas', imagen: imgHaciendasYFincas },
];
---

<Layout
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
  lang={lang}
>
  <Navbar lang={lang} />
  <main class='min-h-screen'>
    <!-- Hero Section -->
    <section aria-label='Banner principal'>
      <Banner
        lang={lang}
        bannerImage={bannerLugares}
        title='Lugares y Locaciones'
        subtitle='Para Eventos'
      />
    </section>

    <!-- Guia Section -->
    <section aria-label='Eventos únicos' class='my-16 md:my-32'>
      <div
        class='max-w-7xl mx-auto px-4 flex justify-between items-center flex-col md:flex-col gap-8 md:gap-12'
      >
        <h2
          class='text-3xl md:text-4xl lg:text-5xl text-teal block font-extrabold text-center'
        >
          Categorías
        </h2>
        <div class='grid grid-cols-2 md:flex gap-8 md:gap-16 lg:gap-36'>
          <div class='flex flex-col items-center text-center'>
            <h5 class='text-charcoal font-alice font-bold text-sm md:text-lg mb-2'>
              Cantidad de Personas
            </h5>
            <Image src={icono1} alt='' class='w-24 md:w-32 h-auto' />
          </div>
          <div class='flex flex-col items-center text-center'>
            <h5 class='text-charcoal font-alice font-bold text-sm md:text-lg mb-2'>
              Ciudades
            </h5>
            <Image src={icono2} alt='' class='w-12 md:w-16 h-auto' />
          </div>
          <div class='flex flex-col items-center text-center'>
            <h5 class='text-charcoal font-alice font-bold text-sm md:text-lg mb-2'>
              Tipo de Evento
            </h5>
            <Image src={icono3} alt='' class='w-12 md:w-16 h-auto' />
          </div>
          <div class='flex flex-col items-center text-center'>
            <h5 class='text-charcoal font-alice font-bold text-sm md:text-lg mb-2'>
              Tipo de Lugar
            </h5>
            <Image src={icono4} alt='' class='w-12 md:w-16 h-auto' />
          </div>
        </div>
        <div class='flex gap-8 md:gap-16'>
          <Button variant='primary' size='md'>Filtrar</Button>
          <Button variant='secondary' size='md'>Borrar</Button>
        </div>
      </div>
    </section>

    <section
      class='max-w-7xl mx-auto px-4 gap-4 md:gap-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 pb-16 md:pb-32'
    >
      {
        lugares.map((lugar) => (
          <article class='flex flex-col justify-center gap-4 md:gap-5 m-4 md:m-10'>
            <h4 class='text-charcoal font-poppins font-bold text-center text-lg md:text-xl'>
              {lugar.nombre}
            </h4>

            <Image
              src={lugar.imagen}
              alt={lugar.nombre}
              loading='lazy'
              class='w-full h-full object-cover rounded-[32px] shadow-md pointer-events-none select-none'
            />

            <div class='mx-auto'>
              <Button variant='primary' size='md' href='/pagina-destino'>
                Ver mas
              </Button>
            </div>
          </article>
        ))
      }
    </section>
    <section class='bg-[#323639]'>
      <Locaciones />
    </section>
  </main>
  <JoinUsFooter backgroundImage={footerBg} showBackground={true} />
</Layout>
