---
import Layout from '../layouts/LayoutLegalidad.astro';
import Banner from '../components/legalidad/Banner.astro';
import GuideBody from '../components/legalidad/GuideBody.astro';

import Navbar from '../components/layout/Navbar.astro';

import BrandInfo from '../components/legalidad/BrandInfo.astro';
import Footer from '../components/shared/Footer.astro';

const seo = {
	title: 'Requisitos Legales para Bodas Destino en Colombia',
	description: 'Guía completa de requisitos legales para casarse en Colombia. Documentación necesaria, trámites notariales y pasos para bodas de destino. Legalidad sin dramas.',
	keywords: 'requisitos legales bodas Colombia, documentos matrimonio Colombia, casarse en Colombia extranjeros, trámites boda destino, notaría matrimonio'
};
---

<Layout
	title={seo.title}
	description={seo.description}
	keywords={seo.keywords}
>
	<Navbar />
	<main class="min-h-screen">

		<Banner />
		<GuideBody />



		<div class="md:my-16"></div>


		<div class="md:my-16"></div>


		<div class="md:my-16"></div>


		<div class="my-0 md:my-10"></div>
		<BrandInfo />
		<Footer />
	</main>
</Layout>
