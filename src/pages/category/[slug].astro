---
import '../../styles/global.css';
import { Header } from '../../components/layout/Header';
import { Footer } from '../../components/layout/Footer';
import { PostList } from '../../components/blog/PostList';
import { wpApi } from '../../lib/wordpress';
import logoImage from '../../assets/images/Tu-San-Agustin_Logo.png';

export async function getStaticPaths() {
  try {
    const categories = await wpApi.getCategories({ per_page: 100 });
    const paths = [];
    
    for (const category of categories) {
      const posts = await wpApi.getPosts({ 
        categories: [category.id], 
        per_page: 20, 
        _embed: true 
      });
      paths.push({
        params: { slug: category.slug },
        props: { category, posts }
      });
    }
    
    return paths;
  } catch (error) {
    console.error('Error fetching categories for static paths:', error);
    return [];
  }
}

const { category, posts } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Categoría: {category.name} - Tu San Agustín</title>
    <meta name="description" content={`Posts en la categoría ${category.name}. ${category.description}`} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body>
    <Header client:load logoUrl={logoImage.src} />
    
    <main class="min-h-screen bg-gray-50">
      <div class="bg-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center">
            <div class="flex items-center justify-center gap-2 mb-4">
              <span class="text-blue-600 font-medium">Categoría</span>
              <span class="text-gray-400">/</span>
            </div>
            <h1 class="text-4xl font-bold text-gray-900 mb-4">{category.name}</h1>
            {category.description && (
              <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                {category.description}
              </p>
            )}
            <div class="mt-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">
                {category.count} {category.count === 1 ? 'post' : 'posts'}
              </span>
            </div>
          </div>
        </div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        {posts && posts.length > 0 ? (
          <PostList client:load initialPosts={posts} showFilters={false} />
        ) : (
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">No hay posts en esta categoría.</p>
            <a 
              href="/blog" 
              class="inline-flex items-center mt-4 text-blue-600 hover:text-blue-800"
            >
              Ver todos los posts
            </a>
          </div>
        )}
      </div>
    </main>
    
    <Footer client:load />
  </body>
</html>