---
import ServiceCard from './ui/ServiceCard.astro';
---

<div class="w-full max-w-7xl relative mx-auto px-4 md:px-16 py-10">
    
    <button class="swiper-prev-custom absolute left-0 top-[40%] -translate-y-1/2 z-50 w-12 h-12 bg-white rounded-full shadow-xl flex items-center justify-center hover:bg-gray-50 transition-all border border-gray-100 text-gray-800 cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
    </button>
    
    <button class="swiper-next-custom absolute right-0 top-[40%] -translate-y-1/2 z-50 w-12 h-12 bg-white rounded-full shadow-xl flex items-center justify-center hover:bg-gray-50 transition-all border border-gray-100 text-gray-800 cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
    </button>

    <div class="swiper mySwiperIntro !p-6">
        <div class="swiper-wrapper">
            
            {/* Original Slides */}
            <ServiceCard 
                title="Fiestas de 15 años" 
                image="images/Quinceaños.webp"
                class="swiper-slide pb-12"
            />
            <ServiceCard 
                title="Celebraciones" 
                image="images/Tu-San-Agustin-Home_32.webp"
                class="swiper-slide pb-12"
            />
            <ServiceCard 
                title="Event & wedding planner" 
                image="images/Tu-San-Agustin-Home_01.webp"
                class="swiper-slide pb-12"
            />

            {/* Duplicates for Loop */}
            <ServiceCard 
                title="Fiestas de 15 años" 
                image="https://www.tusanagustin.com/assets/media/landings-renovadas/001-pagina-banquetes-medellin/banquetes-medellin-tu-san-agustin-foto-decoracion-personalizada.png"
                class="swiper-slide pb-12"
            />
            <ServiceCard 
                title="Celebraciones" 
                image="https://www.tusanagustin.com/assets/media/landings-renovadas/001-pagina-banquetes-medellin/banquetes-medellin-tu-san-agustin-foto-decoracion-personalizada.png"
                class="swiper-slide pb-12"
            />
            <ServiceCard 
                title="Event & wedding planner" 
                image="https://www.tusanagustin.com/assets/media/landings-renovadas/001-pagina-banquetes-medellin/banquetes-medellin-tu-san-agustin-foto-decoracion-personalizada.png"
                class="swiper-slide pb-12"
            />

        </div>
    </div>

    <!-- CTA Button -->
    <div class="flex justify-center mt-8">
        <button class="bg-[#1A1A1A] text-white px-12 py-3 rounded-full text-lg italic font-light tracking-wide hover:bg-opacity-90 transition-all shadow-lg">
            Ver más
        </button>
    </div>
</div>

<style>
    /* Forzar que el swiper sea visible y permita arrastre */
    .swiper { width: 100%; height: auto; }
    .swiper-slide { height: auto; user-select: none; }
    
    /* Si las flechas no aparecen, es por el Z-INDEX */
    .swiper-prev-custom, .swiper-next-custom {
        display: flex !important;
        opacity: 1 !important;
        visibility: visible !important;
    }

    /* Evita que la imagen bloquee el arrastre del mouse */
    img { pointer-events: none; }
</style>

<script>
    import Swiper from 'swiper';
    import { Navigation } from 'swiper/modules';
    import 'swiper/css';
    import 'swiper/css/navigation';

    // Función de inicialización
    const initIntroSwiper = () => {
        new Swiper(".mySwiperIntro", {
            modules: [Navigation],
            slidesPerView: 1,
            spaceBetween: 50, // Increased to 50 to ensure no peeking on mobile
            loop: true,
            simulateTouch: true,
            grabCursor: true,
            navigation: {
                nextEl: ".swiper-next-custom",
                prevEl: ".swiper-prev-custom",
            },
            breakpoints: {
                640: { slidesPerView: 1.5, spaceBetween: 30 },
                768: { slidesPerView: 2, spaceBetween: 40 },
                1024: { slidesPerView: 3, spaceBetween: 50 } // Increased to ensure gap hides neighbors
            }
        });
    };

    // Ejecutar al cargar la página
    initIntroSwiper();
    
    // Soporte para View Transitions de Astro
    document.addEventListener('astro:page-load', initIntroSwiper);
</script>