<style>
    .swiper-wrapper {
        align-items: center; 
    }
    
    .swiper-slide {
        display: flex;
        justify-content: center;
        height: auto;
        /* Opacidad eliminada, se verán al 100% */
        transition: transform 0.3s ease;
        transform: scale(0.9); /* Ligeramente más pequeños los lados para dar profundidad */
    }
    
    .swiper-slide-active {
        transform: scale(1); /* El del centro se ve tamaño completo */
        z-index: 10;
    }
</style>

<script>
    import Swiper from 'swiper';
    import { Navigation, Autoplay } from 'swiper/modules';
    import 'swiper/css';
    import 'swiper/css/navigation';

    const initArtistasSwiper = () => {
        const swiper = new Swiper(".swiperArtistas", {
            modules: [Navigation, Autoplay],
            loop: true,               
            loopedSlides: 3,          // Necesario para loop infinito con 3 slides
            loopAdditionalSlides: 3,  // Slides adicionales para loop suave en ambas direcciones
            centeredSlides: true,     
            slidesPerView: 3,         // Siempre mostrar 3 slides
            spaceBetween: 0,
            initialSlide: 1,          // Iniciar en el segundo slide
            autoplay: {
                delay: 3500,
                disableOnInteraction: false,
                pauseOnMouseEnter: true
            },
            navigation: {
                nextEl: ".swiper-next-artistas",
                prevEl: ".swiper-prev-artistas",
            },
            breakpoints: {
                // En móviles mostrar 1 slide
                0: { 
                    slidesPerView: 1, 
                    spaceBetween: 20,
                    loopedSlides: 3,
                    loopAdditionalSlides: 3
                },
                // En tablets mostrar 2 slides
                640: { 
                    slidesPerView: 2, 
                    spaceBetween: 30,
                    loopedSlides: 3,
                    loopAdditionalSlides: 3
                },
                // En desktop mostrar 3 slides
                1024: { 
                    slidesPerView: 3, 
                    spaceBetween: 0,
                    loopedSlides: 3,
                    loopAdditionalSlides: 3
                }
            }
        });
    };

    initArtistasSwiper();
    document.addEventListener('astro:page-load', initArtistasSwiper);
</script>