<section class="bg-[#FDF5E9] py-10 md:py-20 px-4 md:px-10">
    <div class="max-w-7xl mx-auto flex flex-col items-center text-center space-y-12">
        
        <!-- Heading -->
        <h2 class="flex flex-col items-center leading-tight">
            <span class="text-3xl md:text-5xl font-extrabold text-[#2D3748]">Descubre más de</span>
            <span class="text-5xl md:text-7xl font-extrabold text-[#4BB3A1]">Tu San Agustín</span>
        </h2>

        <!-- Subscription Form Section -->
        <div class="flex flex-col items-center gap-4 w-full max-w-2xl">
            <p class="text-gray-600 text-sm md:text-base font-medium">Suscríbete al boletín</p>
            
            <div class="flex gap-4 mb-2">
                <!-- WhatsApp Icon (Teal) -->
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-[#4BB3A1] cursor-pointer hover:opacity-80">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.063 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L0 24l6.335-1.662c1.72.933 3.659 1.423 5.631 1.423s3.945-.494 5.672-1.423l6.335 1.662-1.662-6.335a11.82 11.82 0 001.752-6.173c-.003-6.557-5.338-11.892-11.893-11.892z" fill="currentColor"/>
                </svg>
                <!-- Email Icon (Teal) -->
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#4BB3A1] cursor-pointer hover:opacity-80">
                    <rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                </svg>
            </div>

            <!-- Custom Form -->
            <div class="flex w-full max-w-md bg-[#646464] rounded-full overflow-hidden shadow-lg h-10">
                <input 
                    type="email" 
                    placeholder="Escribe tu correo*" 
                    class="bg-transparent border-none text-white px-6 py-2 w-full text-xs md:text-sm focus:outline-none placeholder:text-gray-300 italic"
                />
                <button class="bg-[#4BB3A1] text-white px-8 py-2 text-xs md:text-sm font-medium hover:bg-opacity-90 transition-all">
                    Suscribirme
                </button>
            </div>
        </div>

        <!-- Badges Row -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 md:gap-16 items-center pt-8 w-full max-w-5xl">
            
            <!-- Calificación Badge -->
            <div class="flex flex-col items-center">
                <span class="text-sm font-bold text-gray-700 mb-2">Calificación Anual</span>
                <span class="text-2xl font-black text-[#4BB3A1] mb-1">4.7</span>
                <div class="w-32 h-32 flex items-center justify-center">
                    <img src="images/Porcentaje.webp" alt="Calificación Anual" class="max-h-full object-contain drop-shadow-sm" />
                </div>
                <div class="flex gap-1 mt-3">
                    {[1, 2, 3, 4, 5].map(() => (
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="#FFD700">
                            <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                        </svg>
                    ))}
                </div>
            </div>

            <!-- FONTUR Badge -->
            <div class="flex flex-col items-center gap-4">
                <span class="text-sm font-bold text-gray-700 italic">Registro Nacional de Turismo</span>
                <div class="w-32 h-32 flex items-center justify-center">
                    <img src="/images/Recurso 14.webp" alt="Registro Nacional de Turismo" class="max-h-full object-contain drop-shadow-sm" />
                </div>
            </div>

            <!-- Camara de Comercio Badge -->
            <div class="flex flex-col items-center gap-4">
                <span class="text-sm font-bold text-gray-700 italic">Acreditación Mercantil</span>
                <div class="w-40 h-32 flex items-center justify-center">
                    <img src="images/logo-camara-comercio-medellin.webp" alt="Acreditación Mercantil" class="max-h-full object-contain drop-shadow-sm" />
                </div>
            </div>

            <!-- Years Badge -->
            <div class="flex flex-col items-center gap-4">
                <span class="text-sm font-bold text-gray-700">Reconocimiento</span>
                <div class="w-32 h-32 flex items-center justify-center">
                    <img src="/images/Recurso 15.webp" alt="38 Años de Trayectoria" class="max-h-full object-contain drop-shadow-sm" />
                </div>
            </div>

        </div>

    </div>
</section>

<style>
    /* Add a subtle serif font for the 38 años if possible, or use fallback */
    @import url('https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital@1&display=swap');
    
    .font-serif {
        font-family: 'Libre Baskerville', serif;
    }
</style>
