        <!-- Center: Logo (Absolute centered on mobile to handle the hamburger) -->
        <div class="flex-shrink-0 absolute left-1/2 -translate-x-1/2 md:static md:translate-x-0 md:flex-1 md:flex md:justify-center">
            <img src="/images/Tu-San-Agustin_Logo_verde-300x156.webp" alt="San Agustín Logo" class="h-10 sm:h-12 md:h-14 w-auto object-contain">
        </div>

        <!-- Right Section: Contact & Menu -->
        <div class="flex items-center gap-2 md:gap-4 flex-1 justify-end">
             <!-- Contact (Hidden mobile) -->
            <div class="hidden md:flex items-center gap-2 md:gap-4 text-brandGreen mr-4">
                <div class="bg-[#e0f2fe] p-2 rounded-full">
                     <a href="tel:+573168753305"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone text-[#4bb3a1]"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg></a>
                </div>
                <div class="flex flex-row items-center gap-2">
                    <a href="tel:+573168753305" class=" text-gray-800 text-sm md:text-lg font-medium whitespace-nowrap">(+57) 316 875 33 05</a>
                    <span class="text-xs text-[#4bb3a1] font-semibold uppercase tracking-wider shrink-0">Llámanos</span>
                </div>
            </div>

            <!-- Search Button -->
            <button data-open-search class="p-2 rounded-full hover:bg-gray-100 transition-colors group" aria-label="Buscar">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-700 group-hover:text-[#4BB3A1] transition-colors"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
            </button>

            <!-- Hamburger Button (Mobile Only) -->
            <button id="menu-toggle" class="md:hidden p-2 rounded-full hover:bg-gray-100 transition-colors group">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-gray-700 group-hover:text-[#4BB3A1] transition-colors"><line x1="3" x2="21" y1="6" y2="6"/><line x1="3" x2="21" y1="12" y2="12"/><line x1="3" x2="21" y1="18" y2="18"/></svg>
            </button>
        </div>

    </div>
</nav>

<Sidebar />

<script>
    // Sidebar Logic
    document.getElementById('menu-toggle')?.addEventListener('click', () => {
        document.dispatchEvent(new CustomEvent('open-sidebar'));
    });

    // Desktop Language Toggle Logic
    const langToggle = document.getElementById('lang-toggle-desktop');
    const flagCol = document.getElementById('flag-col');
    const flagUsa = document.getElementById('flag-usa');
    const langText = document.getElementById('lang-text');
    
    let currentLang = 'es';

    langToggle?.addEventListener('click', () => {
        if (currentLang === 'es') {
            // Switch to EN
            flagCol?.classList.remove('opacity-100');
            flagCol?.classList.add('opacity-0');
            
            flagUsa?.classList.remove('opacity-0');
            flagUsa?.classList.add('opacity-100');
            
            if (langText) langText.textContent = 'EN';
            
            currentLang = 'en';
        } else {
            // Switch to ES
            flagCol?.classList.remove('opacity-0');
            flagCol?.classList.add('opacity-100');
            
            flagUsa?.classList.remove('opacity-100');
            flagUsa?.classList.add('opacity-0');
            
            if (langText) langText.textContent = 'ES';
            
            currentLang = 'es';
        }
    });
</script>

<style>
/* Custom updates for this component specifically if tailwind is not enough */
.text-brandGreen svg {
    color: #4BB3A1; /* Fallback or specific override */
}
</style>
