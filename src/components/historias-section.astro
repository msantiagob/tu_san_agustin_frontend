---
import { Card } from "@/components/ui/card"; // Componente React de shadcn/ui

const stories = [
  {
    id: 1,
    image: "/uploads/Tu-San-Agustin-Home_img01.webp",
    title: "Laura & Andrés Boda",
    category: "Matrimonios",
    description:
      "Laura & Andrés una historia de amor realizada en nuestro lugar para Eventos Freebad, en esta historia se refleja la felicidad y pasión de una pareja que nos cautivó pues en cada fotografía se capturan momentos que sin duda serán recordados para toda la vida.",
  },
  {
    id: 2,
    image: "/uploads/Tu-San-Agustin-Home_img02-150x150.webp",
    title: "Fiesta de 15 Años Mariam",
    category: "Fiesta de 15 años",
    description:
      "Fiesta de 15 años realizada en nuestro sitio Finca Forest en Envigado, ideal para realizar fiestas y celebraciones llenas de magia y diversión, cuenta con este maravilloso lugar y el mejor servicio de San Agustín .",
  },
  {
    id: 3,
    image: "/uploads/Tu-San-Agustin-Home_img03.webp",
    title: "Mitsubishi",
    category: "Eventos Empresariales",
    description:
      "Realizamos la celebración de los 50 años de Mitsubishi, un evento empresarial en el que ofrecimos un servicio integral en la operación y logística en nuestro lugar para eventos Orquiderama Jardín Botánico.",
  },
];
---

<section class="py-16 px-4 relative">
  <!-- Fondo overlay -->
  <div class="absolute inset-0" id="historiasbg"></div>

  <div class="container mx-auto relative z-10">
    <!-- Título -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-serif main-title">
        <span class="highlight">Historias</span>
        <span class="text-gray-800">de Eventos Reales</span>
      </h2>
    </div>

    <!-- Grid de historias -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {stories.map((story) => (
        <div class="flex flex-col items-center">
          <div class="relative">
            <!-- Imagen circular superpuesta -->
            <div class="flex justify-center mb-[-50px] relative z-20">
              <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-white shadow-lg">
                <img
                  src={story.image || "/placeholder.svg"}
                  alt={story.title}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
            </div>

            <!-- Card de shadcn (React) -->
            <Card
              className="bg-white rounded-3xl p-6 pt-20 shadow-lg mb-4 relative z-10 historiascard"
              client:load
            >
              <p class="text-gray-600 text-sm leading-relaxed text-center mb-6">
                {story.description}
              </p>

              <h3 class="text-teal-600 text-lg font-medium text-center mb-6">
                {story.title}
              </h3>

              <div class="flex justify-center">
                <button class="bg-teal-400 hover:bg-teal-500 text-black font-medium px-6 py-2 rounded-full transition-colors">
                  Ver más
                </button>
              </div>
            </Card>
          </div>

          <!-- Categoría -->
          <div class="category-link">
            <a href="#" class="">
              {story.category} <span>›</span>
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- Botón inferior -->
    <div class="flex justify-center">
      <button class="btn-testimonials">
        Ver testimonios
        <div class="flex gap-1">
          {Array.from({ length: 5 }).map((_, i) => (
            <span class="text-yellow-400 text-sm">★</span>
          ))}
        </div>
      </button>
    </div>
  </div>
</section>
