<style>
    .swiper-wrapper {
        align-items: center; 
    }
    
    .swiper-slide {
        display: flex;
        justify-content: center;
        height: auto;
        /* Opacidad eliminada, se verán al 100% */
        transition: transform 0.3s ease;
        transform: scale(0.9); /* Ligeramente más pequeños los lados para dar profundidad */
        will-change: transform;
    }
    
    .swiper-slide-active {
        transform: scale(1); /* El del centro se ve tamaño completo */
        z-index: 10;
    }
    
    .swiper-prev-artistas, .swiper-next-artistas {
        width: 40px;
        height: 40px;
    }
</style>

<script>
    import Swiper from 'swiper';
    import { Navigation, Autoplay } from 'swiper/modules';
    import 'swiper/css';
    import 'swiper/css/navigation';

    const initArtistasSwiper = () => {
        requestAnimationFrame(() => {
            const swiper = new Swiper(".swiperArtistas", {
                modules: [Navigation, Autoplay],
                loop: true,
                loopedSlides: 3,
                loopAdditionalSlides: 3,
                centeredSlides: true,
                slidesPerView: 3,
                spaceBetween: 0,
                initialSlide: 1,
                autoplay: {
                    delay: 3500,
                    disableOnInteraction: false,
                    pauseOnMouseEnter: true
                },
                navigation: {
                    nextEl: ".swiper-next-artistas",
                    prevEl: ".swiper-prev-artistas",
                },
                observer: false,
                observeParents: false,
                breakpoints: {
                    0: {
                        slidesPerView: 1,
                        spaceBetween: 20,
                        loopedSlides: 3,
                        loopAdditionalSlides: 3
                    },
                    640: {
                        slidesPerView: 2,
                        spaceBetween: 30,
                        loopedSlides: 3,
                        loopAdditionalSlides: 3
                    },
                    1024: {
                        slidesPerView: 3,
                        spaceBetween: 0,
                        loopedSlides: 3,
                        loopAdditionalSlides: 3
                    }
                },
            });
        });
    };

    initArtistasSwiper();
    document.addEventListener('astro:page-load', initArtistasSwiper);
</script>