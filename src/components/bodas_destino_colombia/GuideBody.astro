<script>
    const horalocaVideo = document.getElementById('horaloca-video') as HTMLVideoElement;
    const horalocaContainer = document.getElementById('horaloca-video-container');
    const horalocaPoster = document.getElementById('horaloca-poster');
    const horalocaPlayBtn = document.getElementById('horaloca-play-btn');

    if (horalocaContainer && horalocaVideo && horalocaPoster && horalocaPlayBtn) {
        horalocaContainer.addEventListener('click', () => {
            if (horalocaVideo.paused) {
                horalocaVideo.play();
                horalocaVideo.classList.remove('hidden');
                horalocaPoster.classList.add('hidden');
                horalocaPlayBtn.classList.add('opacity-0', 'pointer-events-none');
            } else {
                horalocaVideo.pause();
                // Optionally show something when paused, but user said "when it finishes"
            }
        });

        horalocaVideo.addEventListener('ended', () => {
            horalocaVideo.classList.add('hidden');
            horalocaPoster.classList.remove('hidden');
            horalocaPlayBtn.classList.remove('opacity-0', 'pointer-events-none');
            horalocaVideo.currentTime = 0;
        });
    }
</script>
