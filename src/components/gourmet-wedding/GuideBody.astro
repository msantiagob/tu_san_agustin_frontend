            </div>
        </div>


    </div>
</div>

<script>
    document.addEventListener('astro:page-load', () => {
        const containers = document.querySelectorAll('.video-container');

        containers.forEach(container => {
            const video = container.querySelector('video');
            const overlay = container.querySelector('.play-overlay');

            if (!video || !overlay) return;

            // Toggle play/pause on click
            container.addEventListener('click', () => {
                if (video.paused) {
                    video.play();
                    overlay.classList.add('opacity-0', 'pointer-events-none');
                } else {
                    video.pause();
                    overlay.classList.remove('opacity-0', 'pointer-events-none');
                }
            });

            // Show overlay again if video ends

            video.addEventListener('ended', () => {
                overlay.classList.remove('opacity-0', 'pointer-events-none');
                video.load();
            });
        });
    });

    // Fallback for non-ViewTransitions if astro:page-load isn't firing immediately on first load
    // (Optional, but good practice since I don't see ViewTransitions explicitly on/off, but standard script works too)
    // Actually, simple DOMContentLoaded or immediate execution for the script is safer if not using ViewTransitions.
    // Given the previous script was inline, I'll use a standard self-executing logic or just add the listener.

    function initVideos() {
        const containers = document.querySelectorAll('.video-container');
        containers.forEach(container => {
            const video = container.querySelector('video');
            const overlay = container.querySelector('.play-overlay');

            if (!video || !overlay) return;

            container.addEventListener('click', () => {
                if (video.paused) {
                    video.play();
                    overlay.classList.add('opacity-0', 'pointer-events-none');
                } else {
                    video.pause();
                    overlay.classList.remove('opacity-0', 'pointer-events-none');
                }
            });

            video.addEventListener('ended', () => {
                overlay.classList.remove('opacity-0', 'pointer-events-none');
                video.load();
            });
        });
    }

    // Run on load
    initVideos();

    // Also support Astro View Transitions if later added
    document.addEventListener('astro:after-swap', initVideos);
</script>



