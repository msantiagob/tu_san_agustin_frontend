---
import { Check } from "lucide-react";
---

<section class="--background py-16">
  <div class="w-full px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 items-center justify-items-center text-center text-white">
      <!-- Calificación anual -->
      <div class="flex flex-col items-center space-y-4">
        <h3 class="text-lg font-medium text-gray-300">Calificación anual</h3>

        <img
          id="imgcalificacion"
          src="/uploads/calificacion_anual.webp"
          alt="Calificación anual"
          class="w-full h-full object-cover"
          width="192"
          height="192"
          loading="lazy"
        />

        <!-- Si quieres estrellas, puedes añadirlas aquí -->
        <div class="flex space-x-1"></div>
      </div>

      <!-- Registro Nacional de Turismo -->
      <div class="flex flex-col items-center space-y-4">
        <h3 class="text-lg font-medium text-gray-300">
          Registro Nacional
          <br />
          de Turismo
        </h3>
        <div class="rounded-lg flex items-center justify-center">
          <div class="relative">
            <img
              src="/uploads/registro_nacional_de_turismo.webp"
              alt="Registro Nacional de Turismo"
              width="192"
              height="192"
              loading="lazy"
            />
          </div>
        </div>
      </div>

      <!-- Acreditación Mercantil -->
      <div class="flex flex-col items-center space-y-4">
        <h3 class="text-lg font-medium text-gray-300">
          Acreditación
          <br />
          Mercantil
        </h3>
        <div class="w-43 h-30">
          <div class="text-center">
            <img
              src="/uploads/acreditacion_mercantil.webp"
              alt="Acreditación Mercantil"
              width="192"
              height="192"
              loading="lazy"
            />
          </div>
        </div>
      </div>

      <!-- Reconocimiento -->
      <div class="flex flex-col items-center space-y-4">
        <h3 class="text-lg font-medium text-gray-300">Reconocimiento</h3>
        <div class="text-center">
          <img
            src="/uploads/38_anos.webp"
            alt="Reconocimiento 38 años"
            width="192"
            height="192"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </div>
</section>
