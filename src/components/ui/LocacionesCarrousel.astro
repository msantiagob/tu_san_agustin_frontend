---
// src/components/home/LocacionesCarousel.astro
import { Image } from 'astro:assets';

// Importa tus imágenes aquí
import imgNot from '../../assets/images/boda-destinos/not.png';

const locaciones = [
  {
    image: imgNot,
    ciudad: 'Medellín',
    alt: 'Salón de eventos con decoración dorada en Medellín'
  },
  {
    image: imgNot,
    ciudad: 'Montería',
    alt: 'Salón de eventos con techo de madera en Montería'
  },
  {
    image: imgNot,
    ciudad: 'Envigado',
    alt: 'Salón de eventos con luces y decoración en Envigado'
  }
];
---

<section class="w-full py-16 px-4 bg-[#F5F1E8]">
  <div class="max-w-7xl mx-auto">
    <!-- Título -->
    <h2 class="text-center text-4xl md:text-5xl font-serif mb-12">
      <span class="text-teal-600">Locaciones</span>
      <span class="text-[#C5A880]"> para tus eventos</span>
    </h2>

    <!-- Carousel Container -->
    <div class="relative">
      <!-- Botón Anterior -->
      <button 
        id="prevBtn"
        class="absolute left-0 top-1/2 -translate-y-1/2 z-10 bg-white/80 hover:bg-white p-3 rounded-full shadow-lg transition-all duration-300 -ml-4 md:-ml-6"
        aria-label="Anterior"
      >
        <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      </button>

      <!-- Carousel -->
      <div class="overflow-hidden px-8 md:px-12">
        <div 
          id="carousel"
          class="flex gap-6 transition-transform duration-500 ease-in-out"
        >
          {locaciones.map((locacion) => (
            <div class="flex-shrink-0 w-full md:w-1/2 lg:w-1/3">
              <div class="relative group overflow-hidden rounded-3xl shadow-xl aspect-[3/4]">
                <img
                  src={locacion.image.src}
                  alt={locacion.alt}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                />
                
                <!-- Overlay con gradiente -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
                
                <!-- Nombre de la ciudad -->
                <div class="absolute bottom-6 left-6 right-6">
                  <h3 class="text-white text-2xl font-serif font-semibold">
                    {locacion.ciudad}
                  </h3>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Botón Siguiente -->
      <button 
        id="nextBtn"
        class="absolute right-0 top-1/2 -translate-y-1/2 z-10 bg-white/80 hover:bg-white p-3 rounded-full shadow-lg transition-all duration-300 -mr-4 md:-mr-6"
        aria-label="Siguiente"
      >
        <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </button>
    </div>

    <!-- Enlaces de navegación -->
    <div class="flex flex-wrap justify-center gap-8 mt-12 text-gray-600">
      <a href="/ciudades" class="flex items-center gap-2 hover:text-teal-600 transition-colors duration-300 group">
        <span class="text-sm md:text-base italic">Ver ciudades</span>
        <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
      
      <a href="/destinos" class="flex items-center gap-2 hover:text-teal-600 transition-colors duration-300 group">
        <span class="text-sm md:text-base italic">Ver todos los destios</span>
        <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
      
      <a href="/paises" class="flex items-center gap-2 hover:text-teal-600 transition-colors duration-300 group">
        <span class="text-sm md:text-base italic">Ver países</span>
        <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

    <!-- Botón de reserva -->
    <div class="flex justify-center mt-10">
      <button class="bg-[#2D2D2D] text-white px-8 py-3 rounded-full hover:bg-black transition-colors duration-300 font-medium text-sm shadow-lg">
        Quiero reservar
      </button>
    </div>
  </div>
</section>

<script>
  const carousel = document.getElementById('carousel');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  
  let currentIndex = 0;
  let itemsPerView = 1;

  // Calcula cuántos items mostrar según el ancho de pantalla
  function updateItemsPerView() {
    if (window.innerWidth >= 1024) {
      itemsPerView = 3;
    } else if (window.innerWidth >= 768) {
      itemsPerView = 2;
    } else {
      itemsPerView = 1;
    }
  }

  // Calcula el total de items
  const totalItems = carousel?.children.length || 0;

  function updateCarousel() {
    if (!carousel) return;
    
    const itemWidth = carousel.children[0]?.clientWidth || 0;
    const gap = 24; // gap-6 = 24px
    const offset = -(currentIndex * (itemWidth + gap));
    carousel.style.transform = `translateX(${offset}px)`;
  }

  prevBtn?.addEventListener('click', () => {
    if (currentIndex > 0) {
      currentIndex--;
      updateCarousel();
    }
  });

  nextBtn?.addEventListener('click', () => {
    const maxIndex = totalItems - itemsPerView;
    if (currentIndex < maxIndex) {
      currentIndex++;
      updateCarousel();
    }
  });

  // Actualizar en resize
  window.addEventListener('resize', () => {
    updateItemsPerView();
    currentIndex = Math.min(currentIndex, totalItems - itemsPerView);
    updateCarousel();
  });

  // Inicializar
  updateItemsPerView();
  updateCarousel();
</script>