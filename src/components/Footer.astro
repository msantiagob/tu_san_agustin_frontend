---
const awards = [
    "home_tusanagustin-29.webp",
    "home_tusanagustin-30.webp",
    "home_tusanagustin-31.webp",
    "home_tusanagustin-32.webp",
    "home_tusanagustin-34 (1).webp",
    "home_tusanagustin-35.webp",
    "home_tusanagustin-36.webp",
    "home_tusanagustin-37.webp",
    "home_tusanagustin-38.webp",
    "home_tusanagustin-41.webp"
];
---

<section class="bg-[#FDF5E9] py-10 md:py-20 px-4 md:px-10">
    <div class="max-w-7xl mx-auto space-y-24">
        
        <!-- TOP SECTION: CONÓCENOS / QUIÉNES SOMOS -->
        <div class="flex flex-col lg:flex-row justify-between items-start gap-12">
            <div class="space-y-6 flex-1">
                <div class="space-y-2">
                    <h3 class="text-2xl md:text-3xl font-extrabold text-[#4BB3A1] tracking-tight">Conócenos</h3>
                    <h2 class="text-5xl md:text-7xl font-extrabold text-[#2D3748] leading-none">¿Quiénes Somos?</h2>
                </div>

                <!-- Description Box (Wider but Thinner) -->
                <div class="relative max-w-xl bg-[#D1C1A3] px-10 py-8 rounded-[40px] border border-white/5">
                    <p class="text-sm md:text-lg leading-relaxed font-light text-white">
                        Somos Tu San Agustín, la empresa líder en operación de eventos. Con más de 35 años, ofrecemos soluciones integrales y personalizadas para cualquier tipo de evento.
                    </p>
                    <div class="flex justify-end mt-4">
                        <button class="bg-white text-black px-8 py-2.5 rounded-full text-xs  hover:bg-opacity-90 transition-all uppercase tracking-widest shadow-lg">
                            Ver Mas
                        </button>
                    </div>
                </div>
            </div>

            <!-- Awards Carousel with Arrows -->
            <div class="lg:w-1/3 w-full flex flex-col items-center gap-6 mt-12">
                <p class="text-lg font-bold uppercase tracking-widest text-[#4BB3A1]  text-center">PREMIOS Y CERTIFICACIONES</p>
                
                <div class="relative w-80 mx-auto flex items-center justify-center">
                    <!-- Custom Arrows (Absolutely positioned relative to this centered box) -->
                    <div class="swiper-button-prev-awards absolute left-0 z-10 text-[#4BB3A1] cursor-pointer hover:scale-110 transition-transform">
                        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
                    </div>

                    <div class="swiper awardsSwiper w-56 h-72 overflow-hidden mx-auto">
                        <div class="swiper-wrapper">
                            {awards.map((award) => (
                                <div class="swiper-slide flex items-center justify-center">
                                    <div class="w-52 h-52 flex items-center justify-center p-2">
                                        <img src={`/images/${award}`} alt="Premio o Certificación" class="max-h-full object-contain drop-shadow-lg" />
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>

                    <div class="swiper-button-next-awards absolute right-0 z-10 text-[#4BB3A1] cursor-pointer hover:scale-110 transition-transform">
                        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- MIDDLE SECTION: CONTACT FORM -->
        <div class="flex flex-col items-center space-y-12">
            <h3 class="text-[#4BB3A1] text-3xl font-extrabold">Contáctanos</h3>
            
            <form class="w-full max-w-xl space-y-4">
                <div class="space-y-4">
                    <input type="text" placeholder="Nombre y Apellido*" class="w-full bg-[#333638] text-white px-8 py-4 rounded-xl focus:outline-none focus:ring-2 ring-[#4BB3A1]/50 placeholder:text-gray-400 font-medium" />
                    <input type="tel" placeholder="Whatsapp*" class="w-full bg-[#333638] text-white px-8 py-4 rounded-xl focus:outline-none focus:ring-2 ring-[#4BB3A1]/50 placeholder:text-gray-400 font-medium" />
                    <input type="email" placeholder="Email*" class="w-full bg-[#333638] text-white px-8 py-4 rounded-xl focus:outline-none focus:ring-2 ring-[#4BB3A1]/50 placeholder:text-gray-400 font-medium" />
                    <select class="w-full bg-[#333638] text-gray-300 px-8 py-4 rounded-xl focus:outline-none focus:ring-2 ring-[#4BB3A1]/50 appearance-none font-medium">
                        <option>Tipo de Evento</option>
                        <option>Boda</option>
                        <option>Quince Años</option>
                        <option>Corporativo</option>
                        <option>Otro</option>
                    </select>
                    <textarea placeholder="Mensaje" rows="1" class="w-full bg-[#333638] text-white px-8 py-4 rounded-xl focus:outline-none focus:ring-2 ring-[#4BB3A1]/50 placeholder:text-gray-400 font-medium"></textarea>
                </div>
                
                <div class="flex justify-center pt-4">
                    <button type="submit" class="bg-[#4BB3A1] text-white px-16 py-3 rounded-xl text-lg  hover:bg-opacity-90 transition-all shadow-xl">
                        Enviar
                    </button>
                </div>
            </form>
        </div>

    </div>
</section>

<footer class="bg-[#333638] text-white py-10 md:py-20 px-4 md:px-10">
    <div class="max-w-7xl mx-auto">
        <!-- BOTTOM SECTION: BRANDING & LINKS -->
        <div class="pt-20 border-t border-white/5 flex flex-col lg:flex-row gap-16 lg:gap-24">
            
            <!-- Branding Column -->
            <div class="lg:w-1/3 space-y-8">
                <div class="relative inline-block">
                    <img src="/images/Tu-San-Agustin_Logo_verde-300x156.webp" alt="San Agustín Logo" class="h-24 md:h-28 invert brightness-0" />
                </div>

                <div class="space-y-4">
                    <p class="text-[#4BB3A1] text-xl font-bold italic tracking-tight">Síguenos @tusanagustin</p>
                    <div class="flex gap-4">
                        <a href="#" class="hover:scale-110 transition-transform"><img src="/images/Logo Facebook .webp" alt="Facebook" class="h-5 w-5 object-contain invert brightness-0" /></a>
                        <a href="#" class="hover:scale-110 transition-transform"><img src="/images/Logo instagram.webp" alt="Instagram" class="h-5 w-5 object-contain invert brightness-0" /></a>
                        <a href="#" class="hover:scale-110 transition-transform"><img src="/images/Logo whatsapp.webp" alt="WhatsApp" class="h-5 w-5 object-contain invert brightness-0" /></a>
                        <a href="#" class="hover:scale-110 transition-transform"><img src="/images/Logo Ticktok.webp" alt="TikTok" class="h-5 w-5 object-contain invert brightness-0" /></a>
                        <a href="#" class="hover:scale-110 transition-transform"><img src="/images/Logo Youtube.webp" alt="YouTube" class="h-5 w-5 object-contain invert brightness-0" /></a>
                        <a href="#" class="hover:scale-110 transition-transform"><img src="/images/Logo Link.webp" alt="LinkedIn" class="h-5 w-5 object-contain invert brightness-0" /></a>
                        <a href="#" class="hover:scale-110 transition-transform"><img src="/images/Pinterest .webp" alt="Pinterest" class="h-5 w-5 object-contain invert brightness-0" /></a>
                    </div>
                </div>

                <div class="space-y-4">
                    <p class="text-[#4BB3A1] text-lg font-bold">Contáctanos</p>
                    <div class="space-y-4">
                        <div class="flex items-center gap-3 group cursor-pointer">
                            <img src="/images/Icono telefono .webp" alt="Phone" class="h-6 w-6 object-contain invert brightness-0 group-hover:scale-110 transition-transform" />
                            <span class="text-base text-gray-300 font-medium">(+57) 316 875 33 05</span>
                        </div>
                        <div class="flex items-center gap-3 group cursor-pointer">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="white" class="group-hover:scale-110 transition-transform"><path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6zm-2 0l-8 5-8-5h16zm0 12H4V8l8 5 8-5v10z"/></svg>
                            <span class="text-base text-gray-300 font-medium">contacto@tusanagustin.com</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:w-2/3 grid grid-cols-2 md:grid-cols-3 gap-8">
                <ul class="space-y-1.5">
                    {[
                        { name: 'Inicio', url: 'https://www.tusanagustin.com/' },
                        { name: 'Eventos', url: 'https://www.tusanagustin.com/servicios' },
                        { name: 'Servicios', url: 'https://www.tusanagustin.com/servicios' },
                        { name: 'Galerías', url: 'https://www.tusanagustin.com/galeria' },
                        { name: 'Lugares', url: 'https://www.tusanagustin.com/lugares' },
                        { name: 'Planners', url: 'https://www.tusanagustin.com/servicios/event-planner' },
                        { name: 'Artistas', url: 'https://www.tusanagustin.com/artistas' },
                        { name: 'Historias', url: 'https://www.tusanagustin.com/testimonios' },
                        { name: 'Blogs', url: 'https://www.tusanagustin.com/blog' }
                    ].map((link) => (
                        <li><a href={link.url} class="text-gray-300 hover:text-[#4BB3A1] flex items-center gap-2 text-base font-medium transition-colors" style="font-family: 'Poppins', sans-serif;">
                            <span class="w-1.5 h-1.5 rounded-full bg-[#4BB3A1]"></span> {link.name}
                        </a></li>
                    ))}
                </ul>
                <ul class="space-y-1.5">
                    {[
                        { name: 'Contáctanos', url: 'https://www.tusanagustin.com/contactanos' },
                        { name: 'Sobre Nosotros', url: 'https://www.tusanagustin.com/sobre-nosotros' },
                        { name: 'Preguntas Frecuentes', url: 'https://www.tusanagustin.com/preguntas-frecuentes' },
                        { name: 'Condiciones Legales', url: 'https://www.tusanagustin.com/condiciones-legales' },
                        { name: 'Políticas de Privacidad', url: 'https://www.tusanagustin.com/politica-de-privacidad' },
                        { name: 'Consentimiento de Cookies', url: 'https://www.tusanagustin.com/politica-de-privacidad' },
                        { name: 'Mapa del Sitio', url: '#' }
                    ].map((link) => (
                        <li><a href={link.url} class="text-gray-300 hover:text-[#4BB3A1] flex items-center gap-2 text-base font-medium transition-colors" style="font-family: 'Poppins', sans-serif;">
                            <span class="w-1.5 h-1.5 rounded-full bg-[#4BB3A1]"></span> {link.name}
                        </a></li>
                    ))}
                </ul>
                <ul class="space-y-1.5">
                    {[
                        { name: '¡Trabaja con Nosotros!', url: '#' },
                        { name: 'Events & Wedding Planners', url: 'https://www.tusanagustin.com/wedding-planner-medellin/' },
                        { name: 'Artistas y espectáculos', url: 'https://www.tusanagustin.com/servicios/artistas-y-espectaculos' },
                        { name: 'Lugares para Eventos', url: 'https://www.tusanagustin.com/servicios/lugares-para-eventos' },
                        { name: 'Proveedores', url: '#' }
                    ].map((link) => (
                        <li><a href={link.url} class="text-gray-300 hover:text-[#4BB3A1] flex items-center gap-2 text-base font-medium transition-colors" style="font-family: 'Poppins', sans-serif;">
                            <span class="w-1.5 h-1.5 rounded-full bg-[#4BB3A1]"></span> {link.name}
                        </a></li>
                    ))}
                </ul>
            </div>
        </div>

        <!-- PAYMENT METHODS -->
      <div class="flex flex-col items-end w-full mt-10 pr-4">
        <div class="flex flex-col items-center space-y-2">
            <p class="text-[#4BB3A1] text-lg italic font-medium opacity-90">Medios de Pago</p>
            <div class="bg-[#E5E0D8] px-8 py-3 rounded-2xl flex flex-wrap justify-center items-center gap-6 shadow-md">
                
                <img src="/images/VISA.webp" 
                     alt="Visa" 
                     class="h-8 opacity-70 hover:opacity-100 transition-all duration-300" />
                     
                <img src="/images/MASTERCARD.webp" 
                     alt="Mastercard" 
                     class="h-10 opacity-70 hover:opacity-100 transition-all duration-300" />
                     
                <img src="/images/PAYPAL.webp" 
                     alt="PayPal" 
                     class="h-8 opacity-70 hover:opacity-100 transition-all duration-300" />
                
                <img src="/images/PSE.webp" 
                     alt="PSE" 
                     class="h-14 opacity-70 hover:opacity-100 transition-all duration-300" />
                
                <img src="/images/Wompi.webp" 
                     alt="Wompi" 
                     class="h-12 opacity-70 hover:opacity-100 transition-all duration-300" />
                     
            </div>
        </div>
      </div>

    </div>
</footer>

<script>
    import Swiper from 'swiper';
    import { Autoplay, EffectFade, Navigation } from 'swiper/modules';
    import 'swiper/css';
    import 'swiper/css/effect-fade';
    import 'swiper/css/navigation';

    const initAwardsSwiper = () => {
        new Swiper(".awardsSwiper", {
            modules: [Autoplay, EffectFade, Navigation],
            effect: "fade",
            fadeEffect: { crossFade: true },
            loop: true,
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
            navigation: {
                nextEl: '.swiper-button-next-awards',
                prevEl: '.swiper-button-prev-awards',
            },
            slidesPerView: 1,
            spaceBetween: 0,
        });
    };

    initAwardsSwiper();
    document.addEventListener('astro:page-load', initAwardsSwiper);
</script>
