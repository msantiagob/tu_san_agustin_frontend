---
import '../styles/global.css';
import ScrollToTop from '../components/ui/ScrollToTop.astro';
import SearchModal from '../components/ui/SearchModal.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8">
		<meta name="title" content={`inicio | ${title}`}/>
