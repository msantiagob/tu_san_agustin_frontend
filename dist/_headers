# Cache Headers Configuration for Static Assets
# This file configures HTTP cache headers for optimal performance

# Cache fonts for 1 year (immutable - fonts don't change)
/Poppins-Regular_0.ttf
  Cache-Control: public, max-age=31536000, immutable
/Alice-Regular.ttf
  Cache-Control: public, max-age=31536000, immutable
/*.ttf
  Cache-Control: public, max-age=31536000, immutable
/*.woff
  Cache-Control: public, max-age=31536000, immutable
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 year
/_astro/*.webp
  Cache-Control: public, max-age=31536000
/_astro/*.jpg
  Cache-Control: public, max-age=31536000
/_astro/*.png
  Cache-Control: public, max-age=31536000
/images/*
  Cache-Control: public, max-age=31536000

# Cache hashed CSS/JS for 1 year (immutable - hash changes when content changes)
/_astro/*.js
  Cache-Control: public, max-age=31536000, immutable
/_astro/*.css
  Cache-Control: public, max-age=31536000, immutable

# Don't cache HTML - always revalidate for fresh content
/*.html
  Cache-Control: public, max-age=0, must-revalidate
/
  Cache-Control: public, max-age=0, must-revalidate
